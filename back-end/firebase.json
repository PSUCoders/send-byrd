{
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      { "source": "helloWorld", "function": "helloWorld" },
      { "source": "api{,/**}", "function": "main" }
    ],
    "ignore": ["firebase.json", "**/node_modules/**"]
  }
}
